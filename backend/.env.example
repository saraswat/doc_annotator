# Database
DATABASE_URL=postgresql+asyncpg://annotation_user:annotation_pass@localhost:5432/annotation_db

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Configuration
OAUTH_PROVIDER=google
OAUTH_CLIENT_ID=your-google-oauth-client-id
OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# For Google OAuth
GOOGLE_DOMAIN=yourcompany.com

# For Azure OAuth
AZURE_TENANT_ID=your-azure-tenant-id

# For Okta OAuth
OKTA_DOMAIN=yourcompany.okta.com

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8001"]

# File Storage (local or s3)
STORAGE_TYPE=local
UPLOAD_PATH=./uploads

# S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=document-annotations
AWS_REGION=us-east-1

# Chat Service Configuration
CHAT_SERVICE_ENABLED=true
CHAT_DEFAULT_PROVIDER=openai

# LLM Provider Configuration
# OpenAI (Primary provider - get API key from https://platform.openai.com)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=60

# Anthropic Claude (Alternative provider - get API key from https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2000
ANTHROPIC_TIMEOUT=60

# Custom LLM Service (For self-hosted models like Ollama, vLLM, etc.)
CUSTOM_LLM_API_KEY=your-custom-api-token
CUSTOM_LLM_BASE_URL=http://localhost:11434/v1
CUSTOM_LLM_MODEL=llama2
CUSTOM_LLM_TEMPERATURE=0.7
CUSTOM_LLM_MAX_TOKENS=2000
CUSTOM_LLM_TIMEOUT=60

# Chat Service Endpoints (usually don't need to change)
CHAT_COMPLETION_ENDPOINT=/chat/completions
CHAT_MODELS_ENDPOINT=/models